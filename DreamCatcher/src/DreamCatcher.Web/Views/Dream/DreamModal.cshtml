
@model DreamCatcher.Models.ViewModels.DreamVIewModel

@{
    ViewBag.Title = "DreamModal";

    Layout = null;

    bool Edit = ViewBag.Edit;
    var action = Edit ? "Edit" : "Create";
}

<div class="modal-dialog">
    <div class="modal-content">
        @using (Html.BeginForm(action, "Dream", FormMethod.Post))
        {
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">×</span><span class="sr-only">Fechar</span>
                </button>
                <h4 class="modal-title">
                    Discussão
                </h4>
            </div>

            @Html.AntiForgeryToken()

            <div class="modal-body">
                <div class="form-horizontal">
                    @Html.ValidationSummary(true)
                    <div class="form-group">
                        @Html.LabelFor(model => model.RegisterDate, new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @*@{ Model.RegisterDate = Model.RegisterDate == null || Model.RegisterDate == DateTime.MinValue
                                ? DateTime.Now : Model.RegisterDate;}*@
                            @{ if (Model == null)
                                {
                                    @*@Html.TextBoxFor(model=> DateTime.Now.ToString("dd/MM/yyyy"), new { @class = "form-control", @readonly = "readonly" })*@
                                }
                                else
                                {
                                    @Html.TextBoxFor(model => model.RegisterDate, new { @class = "form-control", @readonly = "readonly" })
                                }
                            }

                            @Html.ValidationMessageFor(model => model.RegisterDate)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Title, new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Title)
                        </div>
                    </div>

                    @Html.HiddenFor(x => x.Id)

                </div>
            </div>
            <div class="modal-footer">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <input type="button" value="Cancelar" class="btn btn-default" data-dismiss="modal" />
            </div>
        }
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -